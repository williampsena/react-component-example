    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "http-server": "^14.1.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "parcel": "^2.8.3",
    "parcel-resolver-tspaths": "^0.0.9",
    "process": "^0.11.10",
