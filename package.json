{
  "name": "simple-react-component",
  "version": "1.0.0",
  "description": "This repository contains React Component example with parcel as bundler.",
  "source": "src/index.html",
  "scripts": {
    "test": "jest",
    "start": "parcel",
    "build": "parcel build",
    "lint": "eslint ./src --ext .ts --ext .tsx",
    "check": "tsc --noEmit",
